{
  "compilerOptions": {
    "target": "es2020",
    "lib": [
      "ES6"
    ],
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "allowJs": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true
  }
}
